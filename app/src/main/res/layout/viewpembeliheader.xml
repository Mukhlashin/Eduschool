<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:elevation="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="01-MAY-2022"
            android:background="@drawable/bg_box_border_bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_large"/>
        <TextView
            android:id="@+id/txtNoFaktur"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="000000011"
            android:background="@drawable/bg_box_border_bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_large"/>
        <TextView
            android:id="@+id/txtNamaUnitUsaha"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Anton"
            android:background="@drawable/bg_box_border_bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="@dimen/spacing_large"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Rp 300.000"
            android:background="@drawable/bg_box_border_bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_large"/>
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DALAM KERANJANG"
            android:background="@drawable/bg_box_border_bottom"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:padding="@dimen/spacing_large"/>
    </LinearLayout>
    <View style="@style/Divider" />
</merge>