<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="40dp"
    android:layout_marginHorizontal="20dp"
    android:layout_height="match_parent"
    tools:context=".ProductFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoProduk"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:background="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:src="@drawable/heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:paddingStart="5dp"
                        android:text="Favoritkan" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:src="@drawable/share"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bagikan"
                        android:paddingStart="5dp"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNamaProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Baju seragam SD Lengan Pendek merk Seragam"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtNamaUnitBisnis"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warung Bu Eni"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txtHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp. 40.000"
                android:layout_marginVertical="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginVertical="15dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce quis libero sed erat mollis efficitur et quis nulla. Fusce laoreet lacinia augue pharetra finibus. Mauris pellentesque mattis mattis. Vivamus a nunc eu enim finibus convallis ut eu ex."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLihatKeranjang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lihat Keranjang"
                    android:background="@drawable/bordered_black_button"
                    android:textAllCaps="false"
                    android:layout_marginHorizontal="5dp"
                    android:drawableLeft="@drawable/cart"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="4dp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMasukkanKeranjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masukkan Keranjang"
                        android:textColor="@color/white"
                        android:background="#ec4f4e"
                        android:textAllCaps="false" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:id="@+id/txtPesan"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="Sukses masuk keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>